generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider     = "postgres"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
  schemas      = ["auth", "public"]
}

model profile {
  id             String           @id @db.Uuid
  firstname      String?
  lastname       String?
  avatar_url     String?
  email          String           @unique
  onboarded      Boolean          @default(false)
  qualifications Qualifications[]
  linkedin_url   String?
  twitter_url    String?
  github_url     String?
  badges         Badges[]
  projects       Projects[]

  @@map("profile")
  @@schema("public")
}

model Qualifications {
  id           String  @id @unique
  isVerified   Boolean @default(false)
  document_url String?
  profile_id   String
  profile      profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)

  @@index([profile_id])
  @@schema("public")
}

model Badges {
  id String @id @unique

  profile_id String
  profile    profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)

  @@index([profile_id])
  @@schema("public")
}

model Projects {
  id String @id @unique

  profile_id String
  profile    profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)

  @@index([profile_id])
  @@schema("public")
}
